{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["ES2021"],
    "importHelpers": false,
    "noEmitOnError": true,
    "outDir": "lib",
    "inlineSourceMap": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript"
  },
  "include": ["src/**/*"]
}
